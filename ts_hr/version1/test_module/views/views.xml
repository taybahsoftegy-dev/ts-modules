                <form string="HR WORK CLASS">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Working Team Name"/>
                            </group>
                            <group>
                                <field name="work_time_id" string="Working Time"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="rule_late_id" domain="[('rule_type_id', '=', '1')]" string="Late Rule"/>
                            </group>
                            <group>
                                <field name="rule_early_exit_id" domain="[('rule_type_id', '=', '2')]" string="Early Exit Rule"/>
