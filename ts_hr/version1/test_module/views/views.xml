            <field name="name">hr.work.time.form</field>
            <field name="model">hr.work.time</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                      <group>
                        <notebook>
                            <page string="Working Time">
                              <group col="3">
                                    <div colspan="1">Day</div>
                                    <div colspan="1">From (h)</div>
                                    <div colspan="1">To (h)</div>
                                </group>
                                <group col="3">
                                    <div colspan="1">Sat</div>
