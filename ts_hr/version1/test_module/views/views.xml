                                    <field name="sat_to" colspan="1" widget="float_time" nolabel="1"/>
                                </group>
                                <group col="3">
                                    <div colspan="1">Sun</div>
                                    <field name="sun_from" colspan="1" widget="float_time" nolabel="1"/>
                                    <field name="sun_to" colspan="1" widget="float_time" nolabel="1"/>
